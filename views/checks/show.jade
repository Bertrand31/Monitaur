extends ../layout

block body

    #main-container
        aside.aside
            h1#main-title Monitaure
            nav.main-nav
                ul
                    li
                        a(href="#_") Activity
                    li
                        a(href="#_") Reports
                            span.info 14
                    li
                        a(href="#_") Messages
                            span.info 123
            nav.misc-nav
                ul
                    li
                        a(href="#_") Settings
                    li
                        a(href="#_") Help
            nav.auth-nav
                ul
                    li
                        a(href="#_") Log out
            .profile
                img(src="/images/profile.jpg" alt="Profile picture")
                span Bertrand Junqua
        main.main

            section#graph-container
                button#open-form Add a check
                .main-chart
            table#checks
                thead
                    tr
                        th Status
                        th Name
                        th Domain name or IP
                        th Port
                        th Response time
                        th Delete
                tbody
                    each check in checks
                        tr(id=check.id)
                            td.status x
                            td.name= check.name
                            td= check.domainNameOrIP
                            td= check.port
                            td.response-time
                                td
                                    button.destroy-check Delete

    .fullscreen-wrapper#check-add-form
        form#check-add(method="get")
            fieldset
                input#name(type="text", name="name", placeholder="Name")
                input#domainNameOrIP(type="text", name="domainNameOrIP", placeholder="Domain name or IP")
                input#port(type="text", name="port", placeholder="Port")
                input(type="submit")

    .gradient
        svg(width="100", height="50", version="1.1", xmlns="http://www.w3.org/2000/svg")
            defs
                linearGradient#MyGradient
                    stop(offset="0%", stop-color="#5eed80")
                    stop(offset="100%", stop-color="#357e2e")
