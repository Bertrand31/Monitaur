extends ./layout


block body

    #main-container.sign-in
        main.main
            h1.logo
                img(src="/images/logo.svg" width="264" height="39" alt="Monitaure - Monitoring for the masses")
            .centered-box
                h2 Log in
                form#login(method="post", action="/login")
                    fieldset.login
                        if message
                            p.error= locals.message
                        label Username
                        input#username(name="username", type="text", placeholder="Your username", autofocus, required)
                        label Password
                        input#password(name="password", type="password", placeholder="Your password", required)
                    a(href="#_") Password forgotten?
                    input#submit(type="submit", value="Log in")
                p Don't have an account? 
                    a(href="/signup") Sign up!
